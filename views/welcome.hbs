<initial-page>
<button class = "button1" id="sign-up">Sign Up</button>
<button class = "button1" id="log-in">Login</button>
<div class="container">
    <div id = "logo">
        <img src="newlog.png" alt="broken">
        <p>&copy Developed by Afrah and Sylvia</p>
    </div>
    <div id="user">
        <img src="brain.png" alt="broken">
    </div>
    <div class="modal" id="login_f">
        <div class="modal-c">
            <span class="close" id="close">&times</span>
            <h1 style="display:inline; margin-left:200px" ><b>Sign In</b></h1>
            <br>
            <br>
            <label ><b>Username</b></label>
            <input id = "uname1" type="text" placeholder="Enter Username" required>

            <label for="psw"><b>Password</b></label>
            <input id="passwrd1"type="password" placeholder="Enter Password" required>
            <button id="signin">Login</button>
        </div>
    </div>

<div class="modal" id="signup_f">
    <div class ="modal-c">
        <span class="close" id="up-close">&times</span>
        <h1 style="display:inline; margin-left:200px" ><b>Sign Up</b></h1>
        <br>
        <br>
        <label><b>First Name</b></label>
        <input type="text" placeholder="Enter First Name" id="first" required>

        <label><b>Username</b></label>
        <input type="text" placeholder="Enter Username" id="uname" required>

        <label><b>Password</b></label>
        <input type="password" placeholder="Enter Password" id="password" required>

        <label><b>Re-enter Password</b></label>
        <input type="password" placeholder="Enter Password" id="rpassword" required>

        <button type="submit" id="signup">Sign Up</button> 
    </div>
</div>
<div class="modal" id="error_f">
    <div class ="modal-c">
        <span class="close" id="e-close">&times</span>
        <h1 style="display:inline">Oops! There was an error with creating your account.</h1>
        <h1>One of the following may have happened:</h1>
        <ul>
            <li>The username entered already exists; maybe try a different one?</li>
            <li>Our game may just not like you! LOL ;)</li>
        </ul>
        <h1>Please try again!</h1>
    </div>
</div>
<div class="modal" id="success_f">
    <div class ="modal-c">
        <span class="close" id="s-close">&times</span>
        <h1 style="display:inline">Success!</h1>
        <h2>Log in now to play.</h2>
</div>
</div>
</div>
</initial-page>

<script src="user-form.js"> </script>